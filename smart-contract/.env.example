# Environment Variables for TimeVault Smart Contracts

# Private key for deployment (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# RPC URLs
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_key
POLYGON_RPC_URL=https://polygon-rpc.com

# API Keys for contract verification
BASESCAN_API_KEY=your_basescan_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Infura API Key
INFURA_API_KEY=your_infura_api_key

# CoinMarketCap API Key for gas reporting
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Forking configuration (optional)
FORK_URL=https://mainnet.base.org
FORK_BLOCK_NUMBER=

# Gas reporting
REPORT_GAS=false

# Deployment configuration
PROTOCOL_FEE=50  # 0.5%
FEE_RECIPIENT=0x742d35Cc6634C0532925a3b8D4C9db96c4b4d8b6

# Yield strategy addresses (Base mainnet)
AAVE_V3_POOL=0xA238Dd80C259a72e81d7e4664a9801593F98d1c5
COMPOUND_V3_COMET=0x46e6b214b524310239732D51387075E0e70970bf

# Chainlink automation
CHAINLINK_REGISTRY=0x86EFBD0b6736Bed994962f9797049422A3A8E8Ad
CHAINLINK_REGISTRAR=0x57A4a13b35d25EE78e084168aBaC5ad360252467

# Security settings
MULTISIG_THRESHOLD=2
DAILY_WITHDRAW_LIMIT=1000000000000000000  # 1 ETH in wei

# Frontend configuration
FRONTEND_URL=https://app.timevault.finance
API_URL=https://api.timevault.finance

# Database (for analytics)
DATABASE_URL=postgresql://username:password@localhost:5432/timevault

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# IPFS (for NFT metadata)
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key
