{
  "name": "@timevault/smart-contracts",
  "version": "2.0.0",
  "description": "TimeVault DeFi Savings Protocol Smart Contracts",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "deploy:testnet": "npx hardhat run scripts/deploy.ts --network base-sepolia",
    "deploy:mainnet": "npx hardhat run scripts/deploy.ts --network base-mainnet",
    "verify": "npx hardhat verify --network base-mainnet",
    "flatten": "npx hardhat flatten",
    "size": "npx hardhat size-contracts",
    "gas-report": "REPORT_GAS=true npx hardhat test",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol'",
    "clean": "npx hardhat clean",
    "typechain": "npx hardhat typechain"
  },
  "keywords": [
    "defi",
    "savings",
    "ethereum",
    "base",
    "smart-contracts",
    "solidity",
    "yield-farming",
    "time-locked",
    "vault"
  ],
  "author": "TimeVault Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/timevault/smart-contracts.git"
  },
  "bugs": {
    "url": "https://github.com/timevault/smart-contracts/issues"
  },
  "homepage": "https://timevault.finance",
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^3.0.7",
    "@nomicfoundation/hardhat-ignition-viem": "^3.0.7",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.2",
    "@nomicfoundation/hardhat-verify": "^3.0.8",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.7",
    "chai": "^6.2.2",
    "hardhat": "^3.1.5",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^2.2.1",
    "mocha": "^11.7.5",
    "prettier": "^3.4.2",
    "prettier-plugin-solidity": "^1.4.1",
    "solhint": "^5.0.3",
    "solidity-coverage": "^0.8.15",
    "typescript": "~5.8.0",
    "typechain": "^8.3.2"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.2.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "dotenv": "^17.2.3",
    "viem": "^2.45.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
